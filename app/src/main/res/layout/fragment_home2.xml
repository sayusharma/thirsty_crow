<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/overlayBackground"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/White"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:src="@drawable/water"
                android:layout_height="250dp"/>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/textPurified"
            android:fontFamily="@font/marko_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Purified Drinking Water CAN"
            android:textColor="#3E3D3D"
            android:textSize="22sp" />
        <RadioGroup
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/radioWithoutCan"
                android:layout_weight="1"
                android:background="@drawable/radio_button_left_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Rs.45 (CAN excluded)"
                android:textColor="#fff" />
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:id="@+id/radioWithCan"
                android:background="@drawable/radio_button_right_selector"
                android:checked="false"
                android:padding="10dp"
                android:button="@android:color/transparent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rs.200 (CAN included)"
                android:layout_height="40dp"
                />
        </RadioGroup>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/White"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/cardViewNotSelected"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:text="HIGHLIGHTS"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="-> 5-Level Certified Water Purification\n-> 24*7 Booking Availablity\n-> High-Level Safety Measures.\n-> Well-sanitised deliveries\n-> Sealed with Love and Care"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:text="CAPACITY : 20L"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />
                <Button
                    android:layout_width="match_parent"
                    android:onClick="onOrderNowPressed"
                    android:layout_marginTop="25dp"
                    android:id="@+id/btnOrderNow"
                    android:padding="10dp"
                    android:text="Order Now"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textAllCaps="false"
                    android:textSize="22sp"
                    android:background="@drawable/login_back"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
    <!-- TODO: Update blank fragment layout -->



</FrameLayout>